<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"

    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/books_gradient"
        android:weightSum="10">

        <TextView
            android:id="@+id/tv_book_info"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="Book 1"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <LinearLayout

            android:id="@+id/buttons_container"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/bluestar"
                android:contentDescription="steluta"/>

            <ImageView
                android:id="@+id/patratel"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="2dp"
                android:contentDescription="patratel"

                android:src="@drawable/bluesquare" />

            <ImageView
                android:id="@+id/go"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/blackarrow"
                android:contentDescription="blackarrow"

                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

